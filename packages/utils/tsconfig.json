{
	"compilerOptions": {
		"strict": true,
		"outDir": "es",
		"baseUrl": ".",
		"downlevelIteration": true,
		"declaration": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"target": "ES2017",
		"allowJs": true,
		"lib": ["esnext", "dom"],
		"allowSyntheticDefaultImports": true,
		"jsx": "preserve",
		"module": "ES2022"
	},
	"include": ["src"]
}
